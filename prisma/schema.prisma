generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

enum Gender {
  MALE
  FEMALE
  NOT_SPECIFIED
}

enum Role {
  ADMIN
  EMPLOYEE
}

enum Status {
  ACTIVE
  INACTIVE
}

enum ProductStatus {
  AVAILABLE
  NOT_AVAILABLE
  IN_REPAIR
}

enum ProductType {
  SPARE
  SERVICE
  ACCESSORY
  MATERIAL
}

enum InventoryStatus {
  AVAILABLE
  NOT_AVAILABLE
  IN_REPAIR
  ON_HOLD
}

enum MovementType {
  ENTRY
  EXIT
}

/**
 * =======================
 * USERS & CLIENTS
 * =======================
 */

model User {
  id             Int      @id @default(autoincrement())
  documentNumber String   @db.VarChar(20)
  firstName      String   @db.VarChar(75)
  lastName       String   @db.VarChar(75)
  email          String   @unique @db.VarChar(100)
  password       String   @db.VarChar(255)
  gender         Gender
  status         Status   @default(ACTIVE)
  role           Role
  documentTypeId Int
  municipalityId Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  documentType DocumentType @relation(fields: [documentTypeId], references: [id])
  municipality Municipality @relation(fields: [municipalityId], references: [id])

  appointments Appointment[]
  motorcycles  Motorcycle[]

  @@unique([documentNumber, email])
  @@index([documentNumber])
}

model Client {
  id             String   @id @default(cuid())
  documentNumber String   @db.VarChar(20)
  firstName      String   @db.VarChar(75)
  lastName       String   @db.VarChar(75)
  phone          String   @db.VarChar(45)
  email          String   @db.VarChar(100)
  documentTypeId Int
  createdAt      DateTime @default(now())

  documentType DocumentType  @relation(fields: [documentTypeId], references: [id])
  appointments Appointment[]

  @@unique([documentNumber, email])
}

model DocumentType {
  id           Int    @id @default(autoincrement())
  name         String @db.VarChar(100)
  abbreviation String @unique @db.VarChar(25)

  users   User[]
  clients Client[]
}

/**
 * =======================
 * LOCATION
 * =======================
 */

model Department {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(100)

  municipalities Municipality[]
}

model Municipality {
  id           Int    @id @default(autoincrement())
  name         String @db.VarChar(100)
  status       Status @default(ACTIVE)
  departmentId Int

  department Department @relation(fields: [departmentId], references: [id])
  users      User[]
  branches   Branch[]

  @@unique([name, departmentId])
}

model Branch {
  id             String   @id @default(cuid())
  name           String   @db.VarChar(75)
  phone          String   @db.VarChar(45)
  address        String   @db.VarChar(120)
  municipalityId Int
  createdAt      DateTime @default(now())

  municipality Municipality @relation(fields: [municipalityId], references: [id])
  workshops    Workshop[]
  inventory    Inventory[]
}

/**
 * =======================
 * WORKSHOP
 * =======================
 */

model Workshop {
  id        String   @id @default(cuid())
  name      String   @db.VarChar(75)
  branchId  String
  createdAt DateTime @default(now())

  branch       Branch        @relation(fields: [branchId], references: [id])
  appointments Appointment[]
  maintenance  Maintenance[]
}

model Appointment {
  id           String   @id @default(cuid())
  dateTime     DateTime
  description  String   @db.VarChar(500)
  workshopId   String
  userId       Int
  motorcycleId String
  clientId     String
  createdAt    DateTime @default(now())

  workshop   Workshop   @relation(fields: [workshopId], references: [id])
  user       User       @relation(fields: [userId], references: [id])
  motorcycle Motorcycle @relation(fields: [motorcycleId], references: [id])
  client     Client     @relation(fields: [clientId], references: [id])

  maintenance Maintenance[]

  @@index([dateTime])
}

/**
 * =======================
 * MOTORCYCLE
 * =======================
 */

model Motorcycle {
  id               String @id @default(cuid())
  serialNumber     String @unique @db.VarChar(50)
  plateNumber      String @unique @db.VarChar(20)
  brand            String @db.VarChar(45)
  model            String @db.VarChar(45)
  cubicCentimeters Int
  color            String @db.VarChar(45)
  engineTypeId     Int
  engineSizeTypeId Int
  userId           Int

  user           User           @relation(fields: [userId], references: [id])
  engineType     EngineType     @relation(fields: [engineTypeId], references: [id])
  engineSizeType EngineSizeType @relation(fields: [engineSizeTypeId], references: [id])

  appointments Appointment[]
}

model EngineType {
  id   Int    @id @default(autoincrement())
  name String @unique @db.VarChar(100)

  motorcycles Motorcycle[]
}

model EngineSizeType {
  id       Int    @id @default(autoincrement())
  name     String @db.VarChar(45)
  capacity String @db.VarChar(100)

  motorcycles Motorcycle[]
}

/**
 * =======================
 * MAINTENANCE
 * =======================
 */

model Maintenance {
  id            String   @id @default(cuid())
  performedAt   DateTime
  description   String   @db.VarChar(255)
  cost          Decimal  @db.Decimal(10, 2)
  warrantyDate  DateTime
  workshopId    String
  appointmentId String
  createdAt     DateTime @default(now())

  workshop    Workshop    @relation(fields: [workshopId], references: [id])
  appointment Appointment @relation(fields: [appointmentId], references: [id])

  assignedParts AssignedPart[]
}

/**
 * =======================
 * INVENTORY
 * =======================
 */

model Product {
  id          String        @id @default(cuid())
  name        String        @db.VarChar(75)
  description String        @db.VarChar(255)
  unitPrice   Decimal       @db.Decimal(10, 2)
  productType ProductType
  status      ProductStatus

  inventory     Inventory[]
  assignedParts AssignedPart[]
}

model Inventory {
  id        String          @id @default(cuid())
  quantity  Int
  status    InventoryStatus
  productId String
  branchId  String
  createdAt DateTime        @default(now())

  product Product @relation(fields: [productId], references: [id])
  branch  Branch  @relation(fields: [branchId], references: [id])

  movements Movement[]

  @@index([productId, branchId])
}

model Movement {
  id           String       @id @default(cuid())
  movementType MovementType
  description  String
  date         DateTime     @default(now())
  inventoryId  String

  inventory Inventory @relation(fields: [inventoryId], references: [id])
}

model AssignedPart {
  id            String  @id @default(cuid())
  quantity      Int
  unitPrice     Decimal @db.Decimal(10, 2)
  totalPrice    Decimal @db.Decimal(10, 2)
  maintenanceId String
  productId     String

  maintenance Maintenance @relation(fields: [maintenanceId], references: [id])
  product     Product     @relation(fields: [productId], references: [id])

  @@index([maintenanceId])
}
